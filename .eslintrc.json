{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es2021": true
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "import/extensions": ["off"], // Вимкнути правило для розширень
    "import/named": "off", // Вимкнути перевірку імпортів
    "import/no-unresolved": ["error", { "ignore": ["index.js"] }], // Ігнорування специфічних помилок
    "indent": ["error", 4],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "semi": true,
        "arrowParens": "always"
      }
    ],
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "no-useless-constructor": "off"
  }
}
